		<dc:title id="title">The Devil’s Dictionary</dc:title>
		<meta property="file-as" refines="#title">Devil’s Dictionary, The</meta>
		<dc:subject id="subject-1">English language -- Dictionaries -- Humor</dc:subject>
		<dc:subject id="subject-2">English language -- Semantics -- Humor</dc:subject>
		<dc:subject id="subject-3">Vocabulary -- Humor</dc:subject>
